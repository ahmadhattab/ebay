<?xml version="1.0"?>
<layout version="0.1.0">
	<seller_index_index>
		<update handle="customer_account"/>
		<reference name="root">
            <action method="setHeaderTitle" translate="title" module="customer"><title>My Account</title></action>
        </reference>
	</seller_index_index>
	<seller_index_add>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template></action>
		</reference>
		<reference name="content">
			<block type="seller/seller" name="" template="jordanshopper/seller.phtml" />
		</reference>
	</seller_index_add>
    <customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink">
                <name>seller_item</name>
                <path>seller</path>
                <label>Sell an item</label>
            </action>
        </reference>
    </customer_account>
</layout>