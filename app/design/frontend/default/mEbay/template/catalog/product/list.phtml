                    <div class="desc std">
                        <strong>Item Subtitle: </strong><?php echo $_helper->productAttribute($_product, $_product->getShortDescription(), 'short_description') ?>
                    </div>
                    <div class="desc std">
                    	<strong>Loaction: </strong><?php echo $_product->getLocation(); ?>
                    </div>
                                        <div class="desc std">
                    	<strong><?php echo $this->__('Item Condition') . ': ';?></strong>
                    	<?php
					$cond = $_product->getAttributeText('item_condition_static');
					if ($cond == 'Other')
					{
						echo $cond . ': ' . $_product->getItemConditionOther();
					}
					else {
						echo $cond;
					}
					?>
					
                    </div>
                </div>
            </div>
            <?php echo $this->getPriceHtml($_product, true) ?>
        </li>
    <?php endforeach; ?>
    </ol>
    <script type="text/javascript">decorateList('products-list', 'none-recursive')</script>

    <?php else: ?>

    <?php // Grid Mode ?>

    <?php $_collectionSize = $_productCollection->count() ?>
    <?php $_columnCount = $this->getColumnCount(); ?>
